
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whooshColor5_grey">

    <TextView
        android:id="@+id/textView_sim_info"
        android:layout_width="399dp"
        android:layout_height="45dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/audiowide"
        android:textAlignment="center"
        android:textColor="@color/whooshColor4_grey"
        android:textSize="30sp"
        tools:text="AC4785"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout_checkboxes_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_sim_info">


    </androidx.gridlayout.widget.GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout_checkboxes_info"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp">

        <TextView
            android:id="@+id/button_delete_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/whooshColor4_grey"
            android:fontFamily="@font/audiowide"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Delete"
            android:textAlignment="center"
            android:textColor="@color/fon"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/button_send_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@color/whooshColor4_grey"
            android:fontFamily="@font/audiowide"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Send"
            android:textAlignment="center"
            android:textColor="@color/fon"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/button_positive_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@color/whooshColor4_grey"
            android:fontFamily="@font/audiowide"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Ok"
            android:textAlignment="center"
            android:textColor="@color/fon"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>