<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settings.SettingsActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="410dp"
        android:layout_height="827dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="24dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:ignore="MissingConstraints">

        <Switch
            android:id="@+id/settings_tire"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:fontFamily="@font/tektur_semibold"
            android:text="Шина"
            android:textAlignment="textEnd"
            android:textSize="28sp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/settings_brakedrum"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:fontFamily="@font/tektur_semibold"
            android:text="Барабан"
            android:textAlignment="textEnd"
            android:textSize="28sp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/settings_cable"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:fontFamily="@font/tektur_semibold"
            android:text="Трос"
            android:textAlignment="textEnd"
            android:textSize="28sp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/settings_rack"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:fontFamily="@font/tektur_semibold"
            android:text="Стойка"
            android:textAlignment="textEnd"
            android:textSize="28sp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/settings_dashboard"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:fontFamily="@font/tektur_semibold"
            android:text="Дашик"
            android:textAlignment="textEnd"
            android:textSize="28sp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/settings_trigger"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:fontFamily="@font/tektur_semibold"
            android:text="Курок"
            android:textAlignment="textEnd"
            android:textSize="28sp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/settings_mk"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:fontFamily="@font/tektur_semibold"
            android:text="МК"
            android:textAlignment="textEnd"
            android:textSize="28sp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/settings_fender"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:fontFamily="@font/tektur_semibold"
            android:text="Крыло"
            android:textAlignment="textEnd"
            android:textSize="28sp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/settings_controller"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:fontFamily="@font/tektur_semibold"
            android:text="Контроллер"
            android:textAlignment="textEnd"
            android:textSize="28sp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/settings_brakehendle"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:fontFamily="@font/tektur_semibold"
            android:text="Ручки"
            android:textAlignment="textEnd"
            android:textSize="28sp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/settings_lock"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:fontFamily="@font/tektur_semibold"
            android:text="Замок"
            android:textAlignment="textEnd"
            android:textSize="28sp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/settings_frame"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:fontFamily="@font/tektur_semibold"
            android:text="Рама"
            android:textAlignment="textEnd"
            android:textSize="28sp"
            android:textStyle="bold" />


    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/tektur_extrabold"
        android:text="Настройки"
        android:textSize="44sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/tektur_bold"
        android:text="Выбери, какие работы ты хочешь сохранять"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />
</androidx.constraintlayout.widget.ConstraintLayout>